class operations
{
	String username;
    String password;
    Connection con;
	void createconnection(String username, String password) throws ClassNotFoundException, SQLException
	{
        Class.forName("org.postgresql.Driver"); // loads the driver
	    
        con = DriverManager.getConnection("jdbc:postgresql://localhost:5432/test", username, password);

	}
	
	
	
	ArrayList<String[]> readdata(String filelink) throws Exception
	{
		String line = "";  
		String splitBy = ",";  
		
		ArrayList<String[]> readstrings = new ArrayList<>();
		boolean creation = false;
		String[] table = null;
		
		try   
		{  
		  
		BufferedReader br = new BufferedReader(new FileReader(filelink));  
		while ((line = br.readLine()) != null)     
		{  
	
		table = line.split(splitBy);    // use comma as separator    
		readstrings.add(table);
		
		}
		}
		catch(Exception e)
		{
			e.printStackTrace();
		}
		
		return readstrings;	
}
	
	void writedata(ArrayList<String[]> readstrings) throws SQLException
	{   
		
		
		boolean creation = false;
		for (String table[]:readstrings)     
		{  
			

           if(creation==false)
		     {
			try {
				
				  
			         String query = "create table aaaa(" + table[0]+ "varchar(100) ," +table[1]+ "varchar(100) ," + table[2]+  "float(50) ," + table[3] + "varchar(100));";
		             creation=true;
			         Statement stmt = con.createStatement();
			         ResultSet rs = stmt.executeQuery(query);
			     
			    }
			   catch(Exception e)
			  {
				e.printStackTrace();
				
			  }
		    
		     }
		else 
		{
			   PreparedStatement st = con.prepareStatement("INSERT INTO aaaa values (?, ?, ?, ?)");
		       String a1 = table[2].replace("\"", " ");
		       Float value = Float.parseFloat(a1);
			
			   st.setString(1, table[0]);
			   st.setString(2, table[1]);
			   st.setFloat(3, value);
			   st.setString(4, table[3]);
			   st.executeUpdate();
			   st.close();
			
			//System.out.println(rs);
			
		 }
	}

	}
}

public class createreport {

	public static void main(String[] args) throws Exception {	
		
		reportcreation a = new reportcreation();
     	String reportid = a.createreport();
     	
     	System.out.println(reportid);
		String url1 = a.retrievereport("frr_1J5oF0CDZ8SulOxCPwQOhDcP");
		
		FileLink link = a.viewfile(url1);

		
		Desktop d = Desktop.getDesktop();
		d.browse(new URI(link.getUrl()));
	    
	    System.out.println("Download Complete");
	    
	    operations operation = new operations();
        
        
        operation.createconnection("postgres", "1234");
        
        
        String filelink = "C:\\\\Users\\\\Hp\\\\Downloads\\\\Connected_account_balance_summary_2021-06-01_to_2021-06-21_UTC.csv";
        
        ArrayList<String[]> readstrings = operation.readdata(filelink);
        
        operation.writedata(readstrings);
		
}
